<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp" android:background="@color/white">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="#D9000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            tools:text="确认删除吗？" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:textColor="#99000000"
            android:textSize="17sp"
            android:visibility="gone"
            tools:text="您确认删除该追记记录？"
            tools:visibility="visible" />

        <View
            android:id="@+id/divider_h"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_tips"
            android:layout_marginTop="32dp"
            android:background="#EDEDED" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/divider_h"
            android:layout_alignBottom="@id/ll_bottom"
            android:layout_centerHorizontal="true"
            android:background="#EDEDED" />

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tips"
            android:layout_marginTop="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#99000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="#2688FF"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>